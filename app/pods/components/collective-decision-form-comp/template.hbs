<div class="form-horizontal">

  <div class="form-group">
    <label class="col-sm-2 control-label">code</label>
    <div class="col-sm-10">
      {{input type="text" value=item.code class="form-control" placeholder="The serial code of the collective decision"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">description</label>
    <div class="col-sm-10">
      {{input type="text" value=item.description class="form-control" placeholder="A short description of the collective decision"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled="{{unless item.isValid 'disabled'}}">{{buttonLabel}}</button>
    </div>
  </div>
</div>
