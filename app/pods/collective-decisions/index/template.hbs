<h3>Όλες οι συλλογικές αποφάσεις</h3>

<div class="row">

    {{#each model as |aCollectiveDecision|}}
      <div class="col-md-4">

        {{#collective-decision-item i_CollectiveDecision=aCollectiveDecision}}

          {{#link-to 'collective-decisions.edit' aCollectiveDecision.id class='btn btn-success btn-xs'}}edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteCollectiveDecision' aCollectiveDecision}}>delete</button>

        {{/collective-decision-item}}

      </div>
    {{/each}}

</div>
